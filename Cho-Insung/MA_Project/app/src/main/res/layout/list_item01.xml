<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vi_view"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#000000"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/temp"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:focusable="false">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:focusable="false">

                <ImageView
                    android:id="@+id/vi_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:focusable="false"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"
                    android:focusable="false">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="달인의 찜닭"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:id="@+id/vi_title"
                        android:gravity="center_vertical"
                        android:focusable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:focusable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        android:layout_weight="1"
                        android:focusable="false">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="#찜닭"
                            android:textSize="13dp"
                            android:layout_marginBottom="3dp"
                            android:id="@+id/vi_text"
                            android:textColor="#808080"
                            android:focusable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="bottom">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:text="동문"
                            android:background="@drawable/round_btn_blue"
                            android:textStyle="bold"
                            android:id="@+id/vi_button"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="2dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:focusable="false">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            android:text="지도보기"
                            android:textSize="12sp"
                            android:id="@+id/map_btn"
                            android:background="#f9d490"
                            android:nestedScrollingEnabled="false"
                            android:focusable="false"
                            android:clickable="false"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#dcd8e6">

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
